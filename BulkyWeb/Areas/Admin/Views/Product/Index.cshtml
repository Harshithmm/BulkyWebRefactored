@model List<Product>

    @* <partial name="_Notification"/>   *@  @* here if we add then this will be only for this view hence add this in the _Layout.cshtml *@
    <div class="container  mb-4 ">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Product List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">  @*here asp-controller is not needed bcz we are in the Product controller*@
                    <i class="bi bi-plus-circle"> </i> Create New Product
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" width="100%">  @* id is used for jquery  in product.js file where #tblData *@
            <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
            </thead>
        </table>
    </div>
    
@section Scripts{
        <script src="~/js/product.js"></script>
    }