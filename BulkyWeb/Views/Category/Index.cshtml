@model List<Category>

    @* <partial name="_Notification"/>   *@  @* here if we add then this will be only for this view hence add this in the _Layout.cshtml *@
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">  @*here asp-controller is not needed bcz we are in the Category controller*@
                <i class="bi bi-plus-circle"> </i> Create New Category
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @* @foreach (var obj in Model.OrderByDescending(u=>u.DisplayOrder)) *@
    @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))  @*orderby ascending*@
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            @* asp-route-id ="@obj.Id"  where id in the helper can have any name but should be same as the one in the controller's action method here
                            it is Edit(int? id) *@
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 ">
                                <i class="bi bi-trash"></i>Delete
                    </a>
                    </div>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>